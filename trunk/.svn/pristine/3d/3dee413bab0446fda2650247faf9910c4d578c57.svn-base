@charset "utf-8";
/* CSS Document */

/*皮肤颜色*/
.color_main,a.color_main{color:#0079ff}
.bg_main{background-color:#0079ff}
.title_main_bg{ background:#f8f8f8}
.title_minor_bg{}
.title_main_color{color:#fff}

/*公共样式*/
body,html{background:#f8f8f8;width:100%; height:100%; overflow:hidden}
body,html,a{color:#000;}
.flexlist .flex {display:flex;display:-webkit-flex;}
.color_555,a.color_555{color:#6e6e6e;}
.flexlayer{ display:flex;display:-webkit-flex;; align-items:center; justify-content:space-around}
.flexlayer .layerbox{height:auto; width:67%; border-radius:4px; overflow:hidden; padding:8px}
.flexlayerBtm{display:flex;display:-webkit-flex;;flex-flow:column; align-items:center;justify-content:flex-end}
.flexlayerBtm .layerbox{width:100%; max-height:50%;overflow:auto;-webkit-overflow-scrolling:touch}
.icon01{background-image:url('../images/icon01.png')}
.icon02{background-image:url('../images/icon02.png')}
.icon03{background-image:url('../images/icon03.png')}
.icon04{background-image:url('../images/icon04.png')}
.icon05{background-image:url('../images/icon05.png')}
/*首页*/
.searchbox{background:#fff;border-radius:2em; padding:6px 10px }
/*首页列表*/
.mainboxs{align-items: stretch; flex-grow:1}
.salelist *{line-height:1}
.salelist >*{display:flex;display:-webkit-flex;;align-items: center; padding:12px 12px 12px 0;}
.salelist [hit]{color:#aaa;}
.salelist [short_intro]{color:#666;}
.salelist .pad{padding:9px 0}
.salelist .icon05{padding:27px 5px 0 5px ;background-repeat:no-repeat; background-size:22px; background-position:center top;}
.salelist .img{width:57px;min-width:57px; overflow:hidden; margin-right:10px; border-radius:0.5em; border:1px solid #f6f6f6;}
.btn_void.xsbtn,.btn_main.xsbtn{ padding:3px 8px; border-radius:2em;}
.corelayer { padding-bottom:50px;}
.corelayer > *{ width:64%; margin:auto;background:#fff;}
/*首页公共样式*/
.tabmenus>*,.tabmenus>*:first-child{ border-width:0px 0px 1px 0px;}
/*首页左菜单*/
.tabmenus{padding-bottom:44px; min-width:20.5%; max-width:20%}
.tabmenus>*{ padding:8px 0;}
.tabmenus>* span{padding:3px 10px; color:#989898; display:block}
.tabmenus .iscur{ background:#fff;}
.tabmenus .iscur>*{border-left:2px solid; color:inherit;}
/*首页底部*/
.bottomfixed{z-index:666}
.tmplayer{z-index:999; border:1px solid #ff9900;}
.shopcart{margin:-10px 0px 0 10px;}
.shopcart,.shopcart em{ width:38px; height:38px; line-height:35px; position:relative; text-align:center; border-radius:50%; display:block}
.shopcart ._num,.tmplayer{position:absolute; width:1.8em; height:1.8em; line-height:1.8em; right:0;top:0; border-radius:50%; font-size:9px; overflow:hidden}
.shopcart em{margin-top:3px; font-size:25px;}
.layer1{display:flex;display:-webkit-flex;;}
.layer1,.shopcart{background:rgba(56,56,56,0.9); color:#fff;}
.layer1 .flexgrow{ justify-content:space-between; padding:0 10px;}
.layer1 .btn_main{padding:13px 25px}
.layer1 .submit{height:43px;min-width:31.25%; padding:0 10px; justify-content:center;}
.layer1 .disable{opacity:1; background:#ddd; color:#fff}

#page_detail footer{padding:5px;}
#page_detail footer>*{width:53.12%; margin:auto; padding:8px 0; border-radius:4px}
.imgshow .img{width:48%; min-width:48%; border-radius:0; margin:0; padding-right:3%; border:0}
.imgshow .squareimg{ padding-bottom:178%; border:1px solid #f6f6f6}
.list_intro{ align-items:stretch;}
.list_intro *{ line-height:1.3; text-align:justify; word-break:break-all;}
/*我的订单*/
.tablayer{ width:100%; overflow:scroll;-webkit-overflow-scrolling:touch; padding:0 14px;}
.tablayer>*{padding:16px 0 13px  0;margin:0 10px; white-space:nowrap; border-bottom:2px solid transparent; line-height:1}
.tablayer>* tt{ color:#666; display:block}
.tablayer .iscur{ color:inherit; border-bottom:2px solid}
.icontab > *{background-repeat:no-repeat; background-size:23px; background-position:left center; padding-left:27px}


/*动画 */
.scale{
	/* Safari and Chrome: */
	-webkit-animation-name: scale;
	-webkit-animation-timing-function:linear;
	-webkit-animation-duration: 0.1s;
	-webkit-animation-iteration-count:1;
}
@-webkit-keyframes scale /* Safari and Chrome */
{
	from{ -webkit-transform:scale(1.5,1.5)}
	to{ -webkit-transform:scale(1,1)}
}
.rotate{
	/* Safari and Chrome: */
	-webkit-animation-name: scan;
	-webkit-animation-timing-function:linear;
	-webkit-animation-duration: 0.5s;
	-webkit-animation-iteration-count:1;
}
@-webkit-keyframes scan /* Safari and Chrome */
{
	from{ -webkit-transform:rotate(0deg)}
	to{-webkit-transform:rotate(180deg)}
}
