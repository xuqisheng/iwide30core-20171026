@charset "utf-8";
/* CSS Document */
img {border: 0;width: 100%;}
html * {outline: 0;-webkit-text-size-adjust: none;-webkit-tap-highlight-color: rgba(0,0,0,0);}


.img_auto_cut{position:relative; overflow:hidden; display:inline-block}
.img_auto_cut img{ position:absolute}
.img_auto_cut ._w_h{ width:100%; height:auto; left:0 !important;}
.img_auto_cut ._h_w{ height:100%; width:auto; top:0 !important;}

.heade{width:100%;height:166px;background:url(../images/p_bg.png) no-repeat center;
background-size:100% 100%;}
.heade .logo{width:79px;margin:auto;padding:0.5rem 0;border-radius:50%;overflow:hidden;}
.heade .num{text-align:center;color:#dd9159;font-size: 18px;}
.heade .txt{text-align:center;padding:2% 0;}
.heade .txt span{font-size:0.5rem;color:#767676;}

.content{width:100%;margin:1.8rem 0;}
.content .con_name{width:90%;margin:auto;}
.content .h_na{width:60px;height:60px;border-radius:50%;float:left;overflow:hidden;}
.content .h_txt{width:64%;float:right;background:#fff;border-radius:0.2rem;padding:2% 3%;position:relative;border:1px solid #e4e4e4;}
.content .h_txt .tit{font-size:13px;color:#febc66;}
.content .h_txt .h_con{font-size:11px;padding:3% 0;}
.content .h_txt .arr{width:0.3rem;position:absolute;top:47%;left:-0.3rem;}
.coupon{width:90%;margin:4% auto;background:#fe8f00;padding-bottom:2%;
	border-radius:0.2rem;}
.coupon .cou_con{background:#fff;padding:6% 3%;position:relative;border:1px solid #e4e4e4;border-top:none;}
.coupon .cou_con .bg_1{width:100%;height:8px;background:url(../images/bor_bg.png) repeat-x;position:absolute;top:-5px;left:0;background-size:3% 65%;}
.coupon .cou_con font{float:right;margin-top:6%;font-size:1.2rem;color:#fe8f00;}
.coupon .cou_con .cou_titl{font-size:18px;color:#fe8f00;}
.coupon .cou_con .cou_text{color:#fec070;}
.coupon .cou_con > p{padding:1% 0;}
.coupon .cou_con .cou_time{color:#8f8f8f;}
.content > p{text-align:center;font-size:12px;padding-top:2%;}
.content > p > a{color:#fe8f00;}
.coupon .cou_con .cou_time,.coupon .cou_con .cou_text{font-size:12px;}

.floot{width:100%;margin:8% auto;}
.floot a > .btn{width:85%;margin:auto;color:#fff;background:#fe8f00;text-align:center;padding:4% 0;border-radius:0.2rem;font-size:15px;}
.floot a > p{text-align:center;color:#99c3ee;padding:4% 0;font-size:13px;}