@charset "utf-8";
/* CSS Document */

body,html,.headfixed{background:#f7f7f7;}

header{ padding-top:22%}

.headfixed{border-width:0}
.checkdate {   width: auto; display:-webkit-box; padding-right:3%; padding-left:0; line-height:1.2}
.checkdate > span{display:block; padding:3% 0; text-align:center;-webkit-box-flex:1; margin-left:3%;}

.checkin,.checkout{ box-sizing:border-box;}

.checkin,.checkin .week{background:#e04d46; color:#fff;}
.checkout{background:#fff; border-image: url(border.gif) 2 stretch; border-width:1px; }
.checkout .week{color:#555}
.checkdate p{ font-size:2.6em;}
.sever span{border:1px solid #999; padding:0.5% 0.1%; border-radius:0.1em; font-size:2em;}


