@charset "utf-8";
/* CSS Document */
.headr{width:100%;background:#fff;display:-webkit-box;}
.headr >div{-webkit-box-flex:1;text-align:center;color:#999;border-right:1px solid #e4e4e4;
margin:4% 0;}
.headr >div:last-child{border:0;}
.headr >div a{color:#999;}
.headr .col{color:#fea533;}
.content{width:94%;padding:3%;}
.content .box{border:1px solid #d3d3d3;border-radius:0.3rem;padding:2%;background:#fff;margin-bottom:3%;}
.content .box .b_titl{padding:3% 0 3% 13%;background:url(../images/ico_5.png) no-repeat left center;
color:#999;background-size:8%;border-bottom:1px solid #d3d3d3}
.h_nane{padding:5% 0;}
.h_nane font{float:right;}
.n_t_con > p{font-size:0.4rem;padding:1% 0;}
.n_t_con >font{float:right;color:#fea533;font-size:1rem;}
.li_btns{text-align:right;margin:3% 0 2% 0;width:100%;}
.li_btns > span{float:left;font-size:0.4rem;color:#fea533;margin-top:1%;}
.li_btns > a{border:1px solid #d3d3d3;font-size:0.5rem;padding:1% 3%;border-radius:0.2rem;}