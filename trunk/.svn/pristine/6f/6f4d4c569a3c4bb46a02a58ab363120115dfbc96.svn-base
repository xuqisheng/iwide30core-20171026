<?php
namespace App\services\soma;

use App\services\BaseService;
use App\services\Result;
use EasyWeChat\Foundation\Application;

/**
 *
 * 以后使用命名空间！！！
 *
 *
 * Class WxService
 * @package App\services\soma
 * @author renshuai  <renshuai@mofly.cn>
 *
