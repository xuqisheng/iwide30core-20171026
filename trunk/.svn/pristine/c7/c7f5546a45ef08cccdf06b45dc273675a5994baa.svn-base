<script>
var setheight=0
var server_item=['24小时热水','无线上网','吹风机','行李寄存','叫醒服务','接机服务','免费停车','有线上网'];

var isfirst=true;
$(function(){		
	setheight=$('.ui_img_auto_cut').width();	
	$(document).on('touchmove',function(e){
		if($(document).height()-$(window).height()-4<=$(document).scrollTop()){;
			if (!isfirst){
				e.preventDefault();
				isfirst = true;
				showload('正在加载',true);
				window.setTimeout(function(){  //模拟加载
					add_hotel_to(
						'room_list.html',   		   //  链接地址
						'images/egimg/eg01.png',   //  图片地址
						'广州天美酒店公寓体育中心店',   //  酒店名
						'398',  				   //  价格
						true,   				   //  是否返券,不返券传false
						'12',   				   //  评论数,没有评论数传 null 
						'24小时热水,无线上网,行李寄存'  // 服务项,没有服务项传 null 
					);
					showload('无更多结果');
					removeload();
				},2000);
			}
			else{
				showload();
				isfirst = false;
			}
		}
	})
});
</script>
