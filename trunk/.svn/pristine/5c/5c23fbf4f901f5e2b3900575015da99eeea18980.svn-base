<?php
if (! defined ( 'BASEPATH' ))
	exit ( 'No direct script access allowed' );


/**
 * //验证手机格式
 * @param $mobilephone
 * @return bool
 */
function check_phone($mobilephone){
    if(preg_match("/^13[0-9]{1}[0-9]{8}$|15[0189]{1}[0-9]{8}$|189[0-9]{8}$/",$mobilephone)){
        //验证通过
        return true;
    }else{
        //手机号码格式不对
        return false;
    }

}