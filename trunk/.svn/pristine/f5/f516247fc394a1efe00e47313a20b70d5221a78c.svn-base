.kill-layer {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .8);
  z-index: 9999;
  .container {
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    min-width: 520/2px;
    width: 80%;
    background: #ffffff;
    overflow: hidden;
    border-radius: 15/2px;
    padding: 50/2px 56/2px 40/2px 56/2px;

    .title {
      text-align: center;
      color: #222222;
      font-weight: normal;
      margin-bottom: 40/2px;
    }

    .content {
      color: #222222;
      &.tip-content {
        text-align: center;
        margin-bottom: 60/2px;
      }
    }

    .qrcode-container {
      text-align: center;
      .qrcode {
        border: 1px solid #f3f4f8;
        width: 200/2px;
        height: 200/2px;
        padding: 16/2px;
        margin-top: 30/2px;
        display: inline-block;
        img {
          width: 100%;
          max-width: 100%;
        }
      }
    }

    .tips {
      margin-top: 40/2px;
      text-align: center;
    }

    .btn-group {
      text-align: center;
      margin-top: 40/2px;
      line-height: 1;

      .btn {
        display: inline-block;
        border-radius: 5/2px;
        padding: 12/2px 60/2px;
        border: 1px solid #ff9900;
        overflow: hidden;
        color: #ff9900;
        &.active {
          color: #ffffff;
          background: #ff9900;
        }
      }
    }

  }
}

#seckill-detail {

  .wrap {
    margin-bottom: (116)/2px;
  }

  .banner {
    img {
      width: 100%;
    }
  }

  .info {
    padding: 26/2px 19/2px 22/2px;
    .info_left {
      width: 70%;
      line-height: 1.5;
    }
  }

  .post {
    padding: 22/2px 19/2px (22-10)/2px;
    overflow: hidden;
    .item {
      margin-bottom: 10/2px;
      span {
        display: block;
        height: 28/2px;
        line-height: 28/2px;
      }

      .icon {
        width: 28/2px;
        height: 28/2px;
        margin-right: 12/2px;
        background: url("../v1/images/choice.png") center center no-repeat;
        background-size: contain;
      }

      margin-right: 40/2px;
    }
  }

  .choice {
    padding: ((73-41)/2)/2px 19/2px;
    .title, .content {
      height: 40/2px;
      line-height: 40/2px;
    }

    .title {
      margin-right: 46/2px;
    }

    .arrow {
      width: 14/2px;
      height: 24/2px;
      background: url("../v1/images/arrow.png") center center no-repeat;
      background-size: contain;
      right: 19/2px;
      top: 50%;
      margin-top: -(24/2)/2px;
    }
  }

  .source {
    padding: ((72-28)/2)/2px 19/2px;
    .icon {
      display: block;
      height: 28/2px;
      width: 24/2px;
      margin-right: 12/2px;
      background: url("../v1/images/tip.png") center center no-repeat;
      background-size: contain;
    }

    .content {
      height: 28/2px;
      line-height: 28/2px;
    }
  }

  .store {
    display: none;
    box-sizing: content-box;
    padding: ((73-41)/2)/2px 19/2px;
    .content {
      height: 40/2px;
      line-height: 40/2px;
    }

    .surplus {
      height: 40/2px;
      line-height: 40/2px;
    }

    .progress {
      height: 40/2px;
      margin-right: 20/2px;
      background: #ffffff;

      .bar {
        top: 50%;
        left: 0;
        margin-top: -5px;
        height: 20/2px;
        width: 100%;
        background-color: #ebebeb;
        border-radius: 10px;
        overflow: hidden;

        div {
          width: 0;
          height: 20/2px;
          background: url("../v1/images/progress.png") 0 0 repeat;
          border-radius: 10px;
          -webkit-transition: all 1s;
        }
      }
    }
  }

  .subtitle {
    padding: ((73-41)/2)/2px 19/2px;
    h2 {
      margin-right: 22/2px;
    }
    span {
      display: block;
    }

    h2, span {
      height: 40/2px;
      line-height: 40/2px;
    }
  }

  .know {
    .content {
      padding: 20/2px 19/2px 24/2px 29/2px;
      p {
        line-height: 1.5;
      }
    }
  }

  .goods-content {
    box-sizing: content-box;
    ul {
      li {
        div {
          box-sizing: content-box;
          padding: ((73-41)/2)/2px 0;
          height: 40/2px;
          line-height: 40/2px;
        }

        &:last-child {
          border-bottom: none;
        }
      }
    }
  }

  .footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100/2px;
    z-index: 99;
    background: #dcdcdc;

    .content {
      overflow: hidden;
      .footer_l, .footer_r {
        height: 100/2px;
      }
      .footer_l {
        width: 60%;
        padding: ((100-57)/2)/2px 0;
        .section {
          height: 57/2px;
          a {
            display: block;
            width: 57/2px;
            height: 57/2px;
            background: #dcdcdc;
            margin-right: 10/2px;
          }

          .home {
            background: url("../v1/images/home.png") center center no-repeat;
            background-size: contain;
          }

          .order {
            background: url("../v1/images/order.png") center center no-repeat;
            background-size: contain;
          }

          .price {
            display: table-cell;
            padding-top: 12/2px;
            height: 40/2px;
            vertical-align: bottom;
            font-size: 34/2px;
            .symbol {
              margin-right: 6/2px;
            }

            .original {
              text-decoration: line-through;
              margin-left: 6/2px;
            }
          }

        }
      }

      .footer_r {
        width: 40%;
        line-height: 100/2px;
        text-align: center;
        color: #ffffff;

        &.disabled {
          background: #808080;
        }
      }
    }
  }
}

#seckill-pay {
  .wrap {
    margin-bottom: (116)/2px;
  }

  .header {
    overflow: hidden;
    padding: ((60-28)/2)/2px 19/2px ((60-28-20)/2)/2px;
    .item {
      margin-bottom: 10/2px;
      span {
        display: block;
        height: 28/2px;
        line-height: 28/2px;
      }

      .icon {
        width: 28/2px;
        height: 28/2px;
        margin-right: 12/2px;
        background: url("../v1/images/choice.png") center center no-repeat;
        background-size: contain;
      }

      margin-right: 20/2px;
    }
  }

  ul {
    padding: 0 26/2px;
    //padding: 26/2px;
    .title {
      height: 62/2px;
      line-height: 62/2px;
    }
    li {
      padding: 12/2px 0;
      .em {
        margin: 0 0.5em;
      }
      input {
        display: block;
        height: 62/2px;
        line-height: 62/2px;
        outline: none;
        border: none;
        margin-left: 46/2px;

        &::-webkit-input-placeholder {
          color: #c3c3c3;
        }
      }

      .choice {
        height: 62/2px;
        line-height: 62/2px;
        span {
          top: 50%;
          right: 8/2px;
          -webkit-transform: translate(0, -50%);
          width: 30/2px;
          height: 31/2px;
          background: url("../v1/images/disabled.png") center center no-repeat;
          background-size: contain;
        }

        &.active {
          span {
            background: url("../v1/images/choice.png") center center no-repeat;
            background-size: contain;
          }
        }
      }

    }
  }

  .goods-detail {
    padding: 26/2px;

    .goods-img {
      width: 160/2px;
      height: 160/2px;
      background: #dcdcdc;
      margin-right: 36/2px;
      overflow: hidden;
      img {
        width: 100%;
      }
    }

    .goods-info {
      padding-top: 16/2px;
      p {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
      .goods-name {
        margin-bottom: 28/2px;
      }
    }
  }

  .title {
    height: 50/2px;
    line-height: 50/2px;
  }

  .number {
    box-sizing: content-box;
    padding: 14/2px 26/2px;
    height: 50/2px;

    .limit {
      height: 50/2px;
      line-height: 50/2px;
      margin-left: 20/2px;
      position: relative;
      span {
        position: absolute;
        color: #ffffff;
        min-width: 100/2px;
        text-align: center;
        border-radius: 5/2px;
        height: 30/2px;
        line-height: 30/2px;
        top: 50%;
        left: 0;
        -webkit-transform: translate(0, -50%);
        padding: 0 6/2px;
      }
    }

    .flex1 {
      text-align: right;
      .number-input {
        display: inline-block;
        width: 204/2px;
        height: 48/2px;
        border: 1px solid #dcdcdc;
        line-height: 50/2px;
        overflow: hidden;

        .reduce {
          width: 48/2px;
          height: 48/2px;
          line-height: 48/2px;
          border-right: 1px solid #dcdcdc;
          &:after {
            position: absolute;
            content: "";
            width: 16/2px;
            height: 4/2px;
            background: #555555;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
          }
        }

        input {
          width: 104/2px;
          height: 48/2px;
          line-height: 48/2px;
          border: none;
          background: none;
          text-align: center;

          &[disabled] {
            background: #ffffff;
            color: #000;
          }
        }

        .increase {
          width: 48/2px;
          height: 48/2px;
          border-left: 1px solid #dcdcdc;
          &:after, &:before {
            position: absolute;
            content: "";
            background: #555555;
            top: 50%;
            left: 50%;
            -webkit-transform: translate(-50%, -50%);
          }

          &:after {
            width: 16/2px;
            height: 4/2px;
          }

          &:before {
            width: 4/2px;
            height: 16/2px;
          }
        }
      }
    }

  }

  .order-time {
    padding: 14/2px 26/2px;
  }

  .footer {
    position: fixed;
    left: 0;
    bottom: 0;
    height: 80/2px;
    width: 100%;

    .flex1 {
      padding-left: 37/2px;
      .table-cell {
        height: 80/2px;
        line-height: 80/2px;
        display: table-cell;
        vertical-align: bottom;
      }
    }

    .buy {
      display: block;
      width: 262/2px;
      font-size: 32/2px;
      height: 80/2px;
      line-height: 80/2px;
      text-align: center;
      color: #ffffff;
    }
  }
}

