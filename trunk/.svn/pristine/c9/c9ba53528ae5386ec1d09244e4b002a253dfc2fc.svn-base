@charset "utf-8";
/* CSS Document */
body,html,.order_box{background:#fff;}
.p_head{padding:3% 0 0 3%;background:#f8f8f8; overflow:hidden}
.p_head .head_con { padding:0 3% 3% 0}
.p_head .head_con .h_l{width:4rem;border-radius:0.3rem;float:left; text-align:center; height:4rem; border:1px solid #e4e4e4;overflow: hidden; background:#fff; margin-right:4%;}
.p_head .head_con .h_l img{width:auto; height:100%}
.p_head .head_con .h_r{;}
.p_head .head_con .h_r .h_name{ padding:1% 0;font-weight:bold;}
.p_head .head_con .h_r .txt_details{font-size:0.5rem;color:#999; word-break:break-all;overflow : hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical; line-height:1.5}
.p_head .head_con p font{font-size:1rem;color:#ff7200;}
.con_list{width:100%;}
.con_list .show_lis{width:96%;margin:auto;}
.con_list .show_lis p{border-bottom:1px solid #e4e4e4;line-height:1.8rem;}
.con_list .show_lis p font{float:right}
.fix{width:100%;position:fixed;bottom:0;left:0;border-top:1px solid #e4e4e4; background:#fff;}
.fix span{display:block;}
.fix .money{float:left;width:64%;text-indent:0.3rem;font-weight:bold; margin-top:3%;}
.fix .money font{font-size:0.8rem;}
.fix .fast_pay{float:right;width:34%;text-align:center;color:#fff; padding:4% 0;background:#fe4e00;}


.code,.notic{padding:3% 2%; position:relative}
.code span:last-child{float:right; margin-top:-0.5em;}
.code span:last-child input{text-align:right;}
.code tt{ background:#ff7200; color:#fff; font-size:0.5rem; padding:0.5em 0;width:4em; display:inline-block; text-align:center;}
.code tt.disable{ background:#999;}
.code span i{color:#f00; font-style:normal;}
.tips{ position:absolute; display:none; border:1px solid #F00; padding:3% 5%; background:#fff; top:100%; right:15%; border-radius:0.3rem; color:#F00}
.tips em{display:inline-block; width:0.4rem; height:0.4rem; border:1px solid #F00; border-right:0; border-bottom:0; position:absolute;top:-0.2rem; left:45%; -webkit-transform:rotate(45deg); background:#fff;}

.notic{ margin-top:1%; background:#f8f8f8; line-height:1.6; font-size:0.5rem;}
.order_box{ border-radius:0.3rem; margin:4% auto; width:94%; height:85%; color:#555; overflow:hidden; position:relative}
.pull .order_spilt_list{overflow:scroll; -webkit-overflow-scrolling:touch; height:65%;}
.pull .pull_title{padding:4% 0; text-align:center; font-size:0.7rem;}
.order_box .item_title{ padding:3%;}
.order_box .item:first-child .item_title{  padding-top:0}
.order_box .item_title span{color:#000}
.order_box .p_head .head_con { border-bottom:1px solid #e4e4e4; overflow:hidden}
.order_box .p_head:last-child  .head_con{ border-bottom:0}
.order_box .p_head .h_l { width:3rem; height:3rem;}

.foot_btn > * {display:block; width:80%; background:#fff; border:1px solid #e4e4e4; margin:3% auto; padding:3% 0; text-align:center; border-radius:0.3rem;}
.foot_btn > *:first-child{background:#ff7200; color:#fff; border-color:#ff7200}
.pullclose{ padding:2% 4%; font-size:0.8rem;text-align:right; float:right}
.order_spilt_list p *,.p_head .head_con p *{vertical-align:middle}
.order_spilt_list p tt,.p_head .head_con p tt{ background:#fff; border:1px solid #e4e4e4; padding:0.2em 0.3em; margin-left:0.5em; border-radius:0.2rem; font-size:0.5rem;}
