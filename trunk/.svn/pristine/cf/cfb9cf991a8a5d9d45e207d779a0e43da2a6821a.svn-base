@charset "utf-8";
/* CSS Document */


.padding{padding:4%; margin-bottom:4%}
.head{background:url(../images/bg01.jpg) no-repeat; background-size:cover; color:#fff;}
.head .user_name{font-size:0.8rem; margin:2% 0;}
.head .user_data{ float:right; margin-top:3%; font-size:0.55rem;}
.head .user_data a{  color:#fff;}
.head .user_data:after{ content:" >"; color:#fff; font-size:0.7rem}
.head .user_img{float:left; border:4px solid rgba(255,162,108,0.9);}
.head .viplv_black{color:#000; background:url(../images/ico03.png) no-repeat left center; background-size:auto 60%; padding-left:5%; display:inline-block; font-size:0.55rem;}
.head .mask{ background:rgba(0,0,0,.3); width:100%; overflow:hidden;text-align:center; }
.head .mask .item{ color:#fff; display:inline-block; width:30%; border-right:1px solid rgba(255,255,255,0.1); padding-bottom:2%;padding-top:2%}
.head .mask .item:last-child{ border:0; }
.head .mask .item div:last-child{ font-size:0.45rem; }
.head .mask .item div:first-child{ font-size:0.7rem; margin-bottom:2%}






