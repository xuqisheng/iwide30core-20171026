@charset "utf-8";
/* CSS Document */

.content{ margin-bottom:4%}
.footbtn{ position:fixed; bottom:0; width:100%; background:#fff; border-top:1px solid #e4e4e4;}
.footbtn .choosebtn{ float:none; line-height:normal;  vertical-align: middle;}
.footbtn .chooseall{ margin-left:4%;}
.footbtn > div { display:inline-block; min-width:30%; padding:3.5% 0}
.footbtn > div.float_r { text-align:center; padding:4.1% 0}
.footbtn .paybtn{ width:100%;}


.addcount{float:right; text-align:right; font-size:0; margin-top:2%; width:5.5rem;}
.addcount > div{ display:inline-block;text-align:center;padding:0.2rem 0.5rem; font-size:0}
.addcount input{ width:0.8rem; font-size:0.6rem;text-align:center;vertical-align:middle; color:#fe4e00}
.addcount img{width:auto; height:0.6rem; vertical-align:middle;}
.addcount .num{ border-left:1px solid #999999;border-right:1px solid #999999; }
.addcount .add{}
.addcount .down{  opacity:0.6 ;}





