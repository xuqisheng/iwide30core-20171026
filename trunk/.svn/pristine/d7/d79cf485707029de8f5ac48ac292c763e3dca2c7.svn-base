    /**
     * @param $str
     * @param $allowEmpty  1 allow; 2 not allow
     * @return bool
     * @author renshuai  <renshuai@mofly.cn>
     */
    public function valid_json($str, $allowEmpty = 1)
    {
        $arr = json_decode($str, true);
//        var_dump($allowEmpty); die;
        if (empty($arr) && $allowEmpty == 2) {
            return false;
        }

        if (json_last_error() > 0 ) {
            return false;
        }
        return true;
    }

    /**
     * @param $value
     * @return bool
     * @author renshuai  <renshuai@mofly.cn>
     */
    public function valid_date($value)
    {
        if ($value instanceof DateTime) {
            return true;
        }

        if ((! is_string($value) && ! is_numeric($value)) || strtotime($value) === false) {
            return false;
        }

        $date = date_parse($value);

        return checkdate($date['month'], $date['day'], $date['year']);
    }

    /**
     * @param $str
     * @param $format
     * @return bool
     * @author renshuai  <renshuai@mofly.cn>
     */
    protected function valid_date_format($str, $format)
    {
        if (! is_string($str) && ! is_numeric($str)) {
            return false;
        }

        $parsed = date_parse_from_format($format, $str);

        return $parsed['error_count'] === 0 && $parsed['warning_count'] === 0;
    }
    
    
