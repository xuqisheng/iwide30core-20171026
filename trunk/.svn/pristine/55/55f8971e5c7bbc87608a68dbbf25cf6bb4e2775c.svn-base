@charset "utf-8";
/* CSS Document */

body,html{ background: #feefe3;height:100%;}
.notic,.giftbox{text-align:center}
.jiantou {text-align:right}
.jiantou img{width:8%; margin-right:10%; margin-top:3%;}
.notic{color:#af1b2c; font-size:0.6rem; margin-bottom:3%}

.fromuser {padding:5%; overflow:hidden; color:#a1753b; margin-bottom:4.3%;}
.fromuser .userimg{width:16%; float:left;margin-right:3%;}
.fromuser .userimg img{border-radius:0.2rem;}
.fromuser .name{padding-right:5%;float:left; }
.fromuser .name,.fromuser .time{margin-top:2%; color:#666666;}
.fromuser .wish{margin-top:2%; color:#e1843b;}
.fromuser .name,.fromuser .wish{font-size:0.65rem;}


.giftbox .boximg{width:50%; font-size:0; margin:auto; }
.giftbox .count{font-size:0.55rem; margin-top:3%; color:#777}
.giftbox .count div:first-child{font-size:0.65rem; color:#444;}
.giftbox .num{color:#bd452b;}
.giftbox .count div:last-child .num{color:#777;}
.giftbox .boximg div{ font-size:0 !important;}

.again{ display:block; position:fixed; bottom:3%;width:100%;text-align:center; color:#a1753b; font-size:0.55rem}
.again span{ padding:1% 2%}
.again:active,.again:visited{color:#a1753b; }
.again img{ height:0.6rem; width:auto; vertical-align:text-bottom}

.none{ text-align:center; padding:7% 0; margin-bottom:10%; font-size:0.7rem;}

.gif{ opacity:0.7; width:100%; position:absolute; top:30%; text-align:center; z-index:99999999;}
.gif img{ width:35%; text-align:center}